{
  "name": "admission-campaign-system",
  "version": "0.1.0",
  "private": true,
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "electron-builder",
    "electron:start": "wait-on tcp:3000 && electron .",
    "dist": "electron-builder"
  },
  "build": {
    "extends": null,
    "icon": "build/icon_uust.png",
    "appId": "com.admissioncampaignsystem",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    },
    "extraMetadata": {
      "main": "build/main.js"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "mkdirp": "3.0.1",
    "node.date-time": "^1.2.2",
    "sequelize": "6.35.2",
    "sqlite3": "5.1.7-rc.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "bootstrap": "^5.3.2",
    "cdbreact": "^1.5.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "mobx": "^6.12.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.2",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
